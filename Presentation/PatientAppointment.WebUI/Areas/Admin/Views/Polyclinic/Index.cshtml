@model List<PolyclinicDto>

@{
    ViewData["Title"] = "Poliklinikler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int counter = 1;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <h4 class="card-title">Poliklinikler</h4>
            <p class="card-subtitle mb-4">Poliklinik oluşturma ve düzenleme alanı.</p>
            @if (Model.Count == 0)
            {
                <div class="alert alert-danger at-3" role="alert">
                    <p><i>Daha önce eklenen herhangi bir Poliklinik bulunamadı. <strong>Poliklinik Ekle</strong> butonunu kullanarak yeni bir Poliklinik ekleyebilirsiniz</i></p>
                </div>
            }
            else
            {
                <div class="search-container">
                    <input type="text" id="search-input" class="form-control search-input" placeholder="Arama yapın...">
                </div>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Poliklinik Adı</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td class="find">@item.PolyclinicName</td>
                                    <td><a href="/Admin/Polyclinic/Update/@item.PolyclinicId" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><button data-url="/Admin/Polyclinic/Delete/@item.PolyclinicId" class="btn btn-outline-danger btn-sm btn-delete">Sil</button></td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            <a href="/Admin/Polyclinic/Create/" class="btn btn-outline-primary">Poliklinik Ekle</a>
        </div>
    </div>
</div>
